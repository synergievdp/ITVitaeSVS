@page "/Students/{id:int}/Curricula/Edit"
@model ITVitaeSVS.UI.Web.Areas.Students.Pages.Curricula.EditModel
@{
    bool Checked(ITVitaeSVS.Core.Domain.Entities.Topic topic) {
        return Model.Student.Curriculum.Topics.Any(ct => ct.Topic == topic)?true:false;
    }
}

<form method="post">
    @foreach (var topic in Model.Topics) {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="topicIds" value="@topic.Id" checked="@Checked(topic)"/>
            <label class="form-check-label" for="flexCheckDefault">
                @topic.Code @topic.Name 
            </label>
        </div>
    }
    <div>
        <input type="submit" />
    </div>
</form>
