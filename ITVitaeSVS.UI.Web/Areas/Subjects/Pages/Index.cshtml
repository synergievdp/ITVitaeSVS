@page
@model ITVitaeSVS.UI.Web.Areas.Subjects.Pages.IndexModel
@{
}

<a asp-page="CreateEdit">Create</a>

<table>
    <tr>
        <th>Name</th>
    </tr>
    @foreach (var subject in Model.Subjects) {
        <tr>
            <td>@subject.Name</td>
            <td>
                <a asp-page="Details" asp-route-id="@subject.Id">Details</a>
                <a asp-page="CreateEdit" asp-route-id="@subject.Id">Edit</a>
            </td>
        </tr>
    }
</table>