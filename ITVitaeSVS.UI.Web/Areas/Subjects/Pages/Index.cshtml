@page
@model ITVitaeSVS.UI.Web.Areas.Subjects.Pages.IndexModel
@inject IStringLocalizer<ITVitaeSVS.UI.Web.Areas.Subjects.Pages.IndexModel> localizer
@{ ViewData["Title"] = @localizer["Title"];
}

<a asp-page="CreateEdit">@localizer["Create"]</a>

<table>
    <tr>
        <th>Name</th>
    </tr>
    @foreach (var subject in Model.Subjects) {
        <tr>
            <td>@subject.Name</td>
            <td>
                <a asp-page="Details" asp-route-id="@subject.Id">@localizer["Details"]</a>
                <a asp-page="CreateEdit" asp-route-id="@subject.Id">@localizer["Edit"]</a>
            </td>
        </tr>
    }
</table>