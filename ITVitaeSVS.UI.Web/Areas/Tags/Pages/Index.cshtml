@page
@model ITVitaeSVS.UI.Web.Areas.Tags.Pages.IndexModel
@inject IStringLocalizer<ITVitaeSVS.UI.Web.Areas.Tags.Pages.IndexModel> localizer
@{ ViewData["Title"] = @localizer["Title"];
}

<a asp-page="CreateEdit">Create</a>

<table>
    <tr>
        <th>@localizer["Name"]</th>
    </tr>
    @foreach (var tag in Model.Tags) {
        <tr>
            <td>@tag.Name</td>
            <td>
                <a asp-page="CreateEdit" asp-route-id="@tag.Id">@localizer["Edit"]</a>
            </td>
        </tr>
    }
</table>