@page
@model ITVitaeSVS.UI.Web.Areas.WorkMethods.Pages.IndexModel
@inject IStringLocalizer<ITVitaeSVS.UI.Web.Areas.WorkMethods.Pages.IndexModel> localizer
@{ ViewData["Title"] = @localizer["Title"];
}

<a asp-page="CreateEdit">@localizer["Create"]</a>

<table>
    <tr>
        <th>@localizer["Name"]</th>
    </tr>
    @foreach (var method in Model.Methods) {
        <tr>
            <td>@method.Name</td>
            <td>
                <a asp-page="CreateEdit" asp-route-id="@method.Id">@localizer["Edit"]</a>
            </td>
        </tr>
    }
</table>
