@page
@model ITVitaeSVS.UI.Web.Areas.Topics.Pages.IndexModel
@{
}

<a asp-page="CreateEdit">Create</a>

<table>
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Level</th>
        <th>WorkMethod</th>
        <th>Tags</th>
        <th>Certificate</th>
    </tr>
    @foreach (var topic in Model.Topics) {
        <tr>
            <td>@topic.Code</td>
            <td>@topic.Name</td>
            <td>@topic.Level</td>
            <td>@topic.WorkMethod</td>
            <td>@String.Join(", ", topic.Tags)</td>
            <td>@topic.Certificate.ExamId</td>
            <td>
                <a asp-page="Details" asp-route-id="@topic.Id">Details</a>
                <a asp-page="CreateEdit" asp-route-id="@topic.Id">Edit</a>
            </td>
        </tr>
    }
</table>